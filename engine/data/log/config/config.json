{
    "version": 1,
    "loggers": {
        "": {
            "level": "NOTSET",
            "handlers": ["debug_console_handler", "info_rotating_file_handler", "error_file_handler", "critical_mail_handler", "info_timed_rotating_file_handler"]
        },
        "externallibs.util.customException": { 
            "level": "WARNING",
            "propagate": false,
            "handlers": ["info_rotating_file_handler", "error_file_handler"]
        },
        "stop_logger":{
            "level": "INFO",
            "propagate": false,
            "handlers": ["info_timed_rotating_file_handler"]
        }
    },
    "handlers": {
        "debug_console_handler": {
            "level": "DEBUG",
            "formatter": "info",
            "class": "logging.StreamHandler",
            "stream": "ext://sys.stdout"
        },
        "info_rotating_file_handler": {
            "level": "INFO",
            "formatter": "json",
            "class": "logging.handlers.RotatingFileHandler",
            "filename": "./engine/data/log/logs/info.log",
            "mode": "a",
            "maxBytes": 1048576,
            "backupCount": 10
        },
        "info_timed_rotating_file_handler": {
            "level": "INFO",
            "formatter": "json",
            "class": "logging.handlers.TimedRotatingFileHandler",
            "filename": "./engine/data/log/logs/timed_info.log",
            "when": "D",
            "interval":30,
            "backupCount": 12
        },
        "error_file_handler": {
            "level": "WARNING",
            "formatter": "json",
            "class": "logging.FileHandler",
            "filename": "./engine/data/log/logs/error.log",
            "mode": "a"
        },
        "critical_mail_handler": {
            "level": "CRITICAL",
            "formatter": "error",
            "class": "logging.handlers.SMTPHandler",
            "mailhost" : "localhost",
            "fromaddr": "monitoring@domain.com",
            "toaddrs": ["dev@domain.com", "qa@domain.com"],
            "subject": "Critical error with application name"
        }
    },
    "formatters": {
        "info": {
            "format": "%(asctime)s %(name)s - [%(process)s] - %(levelname)s:%(message)s"
        },
        "error": {
            "format": "%(asctime)s %(name)s - [%(process)s] - %(levelname)s:%(message)s"
        },
        "json":{
            "class":"pythonjsonlogger.jsonlogger.JsonFormatter",
            "format":"%(asctime)s %(name)s %(levelname)s %(message)s"
        }
        
    }

}